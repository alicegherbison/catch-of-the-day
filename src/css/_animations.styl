/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background red
  transform translateX(-120%)
  transition 0.5s
  max-height 0
  padding 0
  &.order-enter-active
    max-height 60px
    padding 2rem 0
    background yellow
    transform translateX(0)

.order-exit
  background thistle
  transition 0.5s
  transform translateX(0)
  &.order-exit-active
    background palegoldenrod
    transform translateX(120%)